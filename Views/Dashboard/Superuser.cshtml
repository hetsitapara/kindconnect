@{
    ViewData["Title"] = "Superuser Dashboard";
    var stats = ViewBag.Stats as dynamic;
    var recentEvents = ViewBag.RecentEvents as List<Event>;
    var recentApplications = ViewBag.RecentApplications as List<VolunteerApplication>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Superuser Dashboard</h2>
            <p class="text-muted">System Administration Panel</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <h3 class="text-primary">@stats?.TotalUsers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total NGOs</h5>
                    <h3 class="text-success">@stats?.TotalNGOs</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Events</h5>
                    <h3 class="text-info">@stats?.TotalEvents</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Applications</h5>
                    <h3 class="text-warning">@stats?.TotalApplications</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Admin Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Administrative Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                                    <h5 class="card-title mt-3">Manage Volunteers</h5>
                                    <p class="card-text text-muted">View and delete volunteer accounts</p>
                                    <a href="@Url.Action("Volunteers", "SuperAdmin")" class="btn btn-primary w-100">
                                        <i class="bi bi-person-lines-fill"></i> View All Volunteers
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <i class="bi bi-building text-success" style="font-size: 3rem;"></i>
                                    <h5 class="card-title mt-3">Manage NGOs</h5>
                                    <p class="card-text text-muted">View and delete NGO accounts</p>
                                    <a href="@Url.Action("NGOs", "SuperAdmin")" class="btn btn-success w-100">
                                        <i class="bi bi-building"></i> View All NGOs
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model IEnumerable<VolunteerManagementSystem.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                @if (User.IsInRole("NGO"))
                {
                    <h2>My Events</h2>
                }
                else if (User.IsInRole("Volunteer"))
                {
                    <h2>Available Events</h2>
                }
                else
                {
                    <h2>Events</h2>
                }
                @if (User.IsInRole("NGO"))
                {
                    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
                }
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Debug"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    Debug: @TempData["Debug"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @* Search and Filter Section *@
            @if (!User.IsInRole("NGO"))
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="get" asp-action="@(User.IsInRole("Volunteer") ? "Browse" : "Index")">
                            <div class="row g-3">
                                <div class="col-md-5">
                                    <label for="searchNGO" class="form-label">Search by NGO Name</label>
                                    <input type="text" 
                                           class="form-control" 
                                           id="searchNGO" 
                                           name="searchNGO" 
                                           placeholder="Enter NGO name..." 
                                           value="@ViewBag.SearchNGO">
                                </div>
                                <div class="col-md-4">
                                    <label for="category" class="form-label">Filter by Category</label>
                                    <select class="form-select" id="category" name="category">
                                        <option value="">All Categories</option>
                                        @if (ViewBag.Categories != null)
                                        {
                                            foreach (var cat in ViewBag.Categories as List<string>)
                                            {
                                                <option value="@cat" selected="@(cat == ViewBag.SelectedCategory)">@cat</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                    <a asp-action="@(User.IsInRole("Volunteer") ? "Browse" : "Index")" class="btn btn-outline-secondary">
                                        <i class="fas fa-redo"></i> Reset
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            }

            @if (Model.Any())
            {
                @* Results Count *@
                @if (!string.IsNullOrEmpty(ViewBag.SearchNGO as string) || !string.IsNullOrEmpty(ViewBag.SelectedCategory as string))
                {
                    <div class="mb-3">
                        <p class="text-muted">
                            <strong>@Model.Count()</strong> event(s) found
                            @if (!string.IsNullOrEmpty(ViewBag.SearchNGO as string))
                            {
                                <span> matching NGO: <strong>@ViewBag.SearchNGO</strong></span>
                            }
                            @if (!string.IsNullOrEmpty(ViewBag.SelectedCategory as string))
                            {
                                <span> in category: <strong>@ViewBag.SelectedCategory</strong></span>
                            }
                        </p>
                    </div>
                }

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Title</h5>
                                    <p class="card-text">
                                        <strong>Category:</strong> @item.Category<br>
                                        <strong>Date:</strong> @item.StartAt.ToString("MMM dd, yyyy")<br>
                                        <strong>Time:</strong> @item.StartAt.ToString("h:mm tt") - @item.EndAt.ToString("h:mm tt")<br>
                                        <strong>Venue:</strong> @item.Venue<br>
                                        <strong>Capacity:</strong> @item.Capacity volunteers<br>
                                        <strong>NGO:</strong> @item.NGO?.Name
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                                        </small>
                                    </p>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-between">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                        <div>
                                            @if (User.IsInRole("Volunteer"))
                                            {
                                                var userApplications = ViewBag.UserApplications as Dictionary<int, ApplicationStatus> ?? new Dictionary<int, ApplicationStatus>();
                                                if (!userApplications.ContainsKey(item.Id))
                                                {
                                                    @if (item.IsUpcoming && !item.IsFull)
                                                    {
                                                        <a asp-controller="VolunteerApplications" asp-action="Apply" asp-route-eventId="@item.Id" class="btn btn-success btn-sm me-1">
                                                            <i class="fas fa-hand-holding-heart"></i> Apply
                                                        </a>
                                                    }
                                                }
                                                else
                                                {
                                                    var status = userApplications[item.Id];
                                                    var badgeClass = status switch
                                                    {
                                                        ApplicationStatus.Pending => "bg-warning text-dark",
                                                        ApplicationStatus.Approved => "bg-success",
                                                        ApplicationStatus.Rejected => "bg-danger",
                                                        ApplicationStatus.Cancelled => "bg-secondary",
                                                        _ => "bg-info text-dark"
                                                    };
                                                    <span class="badge @badgeClass">@status</span>
                                                }
                                            }
                                            @if (User.IsInRole("NGO"))
                                            {
                                                <a asp-controller="VolunteerApplications" asp-action="Manage" asp-route-eventId="@item.Id" class="btn btn-success btn-sm me-1">
                                                    <i class="fas fa-users"></i> Manage
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm me-1">Edit</a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    @if (User.IsInRole("NGO"))
                    {
                        <h4>No events found</h4>
                        <p class="text-muted">You haven't created any events yet.</p>
                        <a asp-action="Create" class="btn btn-primary">Create your first event</a>
                    }
                    else if (User.IsInRole("Volunteer"))
                    {
                        <h4>No events available</h4>
                        <p class="text-muted">There are currently no events available for volunteering.</p>
                    }
                    else
                    {
                        <h4>No events found</h4>
                        <p class="text-muted">There are currently no events available.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>
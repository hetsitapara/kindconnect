@model VolunteerManagementSystem.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Events</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Delete Event</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-warning"></i> <strong>Warning!</strong> Are you sure you want to delete this event? This action cannot be undone.
                    </div>

                    <h5>Event Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Title:</strong> @Model.Title</p>
                            <p><strong>Category:</strong> @Model.Category</p>
                            <p><strong>Start Date:</strong> @Model.StartAt.ToString("dddd, MMMM dd, yyyy 'at' HH:mm")</p>
                            <p><strong>End Date:</strong> @Model.EndAt.ToString("dddd, MMMM dd, yyyy 'at' HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Venue:</strong> @Model.Venue</p>
                            <p><strong>Capacity:</strong> @Model.Capacity volunteers</p>
                            <p><strong>Current Volunteers:</strong> @Model.CurrentVolunteerCount</p>
                            <p><strong>Organizer:</strong> @Model.NGO.Name</p>
                        </div>
                    </div>

                    @if (Model.CurrentVolunteerCount > 0)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> <strong>Note:</strong> This event has @Model.CurrentVolunteerCount volunteer(s) who have applied. 
                            Deleting this event will affect their applications.
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Description:</label>
                        <div class="border p-3 bg-light rounded">
                            @Html.Raw(Model.Description.Replace("\n", "<br>"))
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this event? This action cannot be undone.')">
                                <i class="fas fa-trash"></i> Delete Event
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

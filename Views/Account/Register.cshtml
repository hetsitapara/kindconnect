@model VolunteerManagementSystem.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Create Account</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Role Selection -->
                        <div class="mb-3">
                            <label class="form-label">I want to register as:</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="SelectedRole" value="Volunteer" id="roleVolunteer" checked>
                                <label class="form-check-label" for="roleVolunteer">
                                    Volunteer
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="SelectedRole" value="NGO" id="roleNGO">
                                <label class="form-check-label" for="roleNGO">
                                    NGO/Organization
                                </label>
                            </div>
                            <span asp-validation-for="SelectedRole" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label">First Name *</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label">Last Name *</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email Address *</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone Number</label>
                            <input asp-for="Phone" class="form-control" type="tel" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password *</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password *</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- NGO Organization Information (Hidden by default) -->
                        <div id="ngoInfo" style="display: none;">
                            <hr>
                            <h6>Organization Information</h6>
                            <div class="mb-3">
                                <label asp-for="OrganizationName" class="form-label">Organization Name *</label>
                                <input asp-for="OrganizationName" class="form-control" />
                                <span asp-validation-for="OrganizationName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="OrganizationMission" class="form-label">Organization Mission</label>
                                <textarea asp-for="OrganizationMission" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="OrganizationMission" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="OrganizationContactEmail" class="form-label">Organization Contact Email</label>
                                <input asp-for="OrganizationContactEmail" class="form-control" type="email" />
                                <span asp-validation-for="OrganizationContactEmail" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="OrganizationContactPhone" class="form-label">Organization Contact Phone</label>
                                <input asp-for="OrganizationContactPhone" class="form-control" type="tel" />
                                <span asp-validation-for="OrganizationContactPhone" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="OrganizationAddress" class="form-label">Organization Address</label>
                                <textarea asp-for="OrganizationAddress" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="OrganizationAddress" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="OrganizationDescription" class="form-label">Organization Description</label>
                                <textarea asp-for="OrganizationDescription" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="OrganizationDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
                            <button type="submit" class="btn btn-primary">Create Account</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted">
                    Already have an account? 
                    <a asp-action="Login">Sign in here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Show/hide NGO information based on role selection
        document.addEventListener('DOMContentLoaded', function() {
            const roleInputs = document.querySelectorAll('input[name="SelectedRole"]');
            const ngoInfo = document.getElementById('ngoInfo');
            
            function toggleNGOInfo() {
                const selectedRole = document.querySelector('input[name="SelectedRole"]:checked').value;
                if (selectedRole === 'NGO') {
                    ngoInfo.style.display = 'block';
                } else {
                    ngoInfo.style.display = 'none';
                }
            }
            
            roleInputs.forEach(input => {
                input.addEventListener('change', toggleNGOInfo);
            });
            
            // Initial check
            toggleNGOInfo();
        });
    </script>
}

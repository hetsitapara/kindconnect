@model ApplicationUser

@{
    ViewData["Title"] = "Volunteer Details";
    var applications = ViewBag.Applications as List<VolunteerApplication>;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Volunteer Details</h2>
            <p class="text-muted">Detailed information about @Model.FullName</p>
        </div>
    </div>

    <div class="row">
        <!-- Volunteer Information -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Personal Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th width="40%">Full Name:</th>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th>Phone:</th>
                                <td>@(Model.Phone ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Username:</th>
                                <td>@Model.UserName</td>
                            </tr>
                            <tr>
                                <th>Joined Date:</th>
                                <td>@Model.CreatedAt.ToString("MMMM dd, yyyy")</td>
                            </tr>
                            <tr>
                                <th>Last Login:</th>
                                <td>@(Model.LastLoginAt?.ToString("MMMM dd, yyyy HH:mm") ?? "Never")</td>
                            </tr>
                            <tr>
                                <th>Status:</th>
                                <td>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Statistics -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Application Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-4">
                            <h3 class="text-primary">@applications?.Count</h3>
                            <p class="text-muted mb-0">Total</p>
                        </div>
                        <div class="col-4">
                            <h3 class="text-success">@applications?.Count(a => a.Status == ApplicationStatus.Approved)</h3>
                            <p class="text-muted mb-0">Approved</p>
                        </div>
                        <div class="col-4">
                            <h3 class="text-warning">@applications?.Count(a => a.Status == ApplicationStatus.Pending)</h3>
                            <p class="text-muted mb-0">Pending</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Applications History -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Application History</h5>
                </div>
                <div class="card-body">
                    @if (applications?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Event</th>
                                        <th>NGO</th>
                                        <th>Applied Date</th>
                                        <th>Status</th>
                                        <th>Event Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var application in applications)
                                    {
                                        <tr>
                                            <td>@application.Event?.Title</td>
                                            <td>@application.Event?.NGO?.Name</td>
                                            <td>@application.AppliedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (application.Status == ApplicationStatus.Approved)
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else if (application.Status == ApplicationStatus.Rejected)
                                                {
                                                    <span class="badge bg-danger">Rejected</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Pending</span>
                                                }
                                            </td>
                                            <td>@application.Event?.StartAt.ToString("MMM dd, yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No applications found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a href="@Url.Action("Volunteers")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Volunteers
            </a>
            <form asp-action="DeleteVolunteer" asp-route-id="@Model.Id" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Volunteer
                </button>
            </form>
        </div>
    </div>
</div>

@model List<ApplicationUser>

@{
    ViewData["Title"] = "Manage Volunteers";
    var volunteerStats = ViewBag.VolunteerStats as Dictionary<string, int>;
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Manage Volunteers</h2>
            <p class="text-muted">View and manage all volunteer accounts</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Volunteers (@Model.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Applications</th>
                                        <th>Joined Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var volunteer in Model)
                                    {
                                        <tr>
                                            <td>@volunteer.FullName</td>
                                            <td>@volunteer.Email</td>
                                            <td>@(volunteer.Phone ?? "N/A")</td>
                                            <td>
                                                <span class="badge bg-info">@(volunteerStats?.ContainsKey(volunteer.Id) == true ? volunteerStats[volunteer.Id] : 0)</span>
                                            </td>
                                            <td>@volunteer.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (volunteer.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("VolunteerDetails", new { id = volunteer.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <form asp-action="DeleteVolunteer" asp-route-id="@volunteer.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No volunteers found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a href="@Url.Action("Superuser", "Dashboard")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

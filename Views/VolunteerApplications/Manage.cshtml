@model IEnumerable<VolunteerManagementSystem.Models.VolunteerApplication>

@{
    ViewData["Title"] = "Manage Applications";
    var eventItem = ViewBag.Event as VolunteerManagementSystem.Models.Event;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-users"></i> Manage Applications
                        @if (eventItem != null)
                        {
                            <span class="fs-6">- @eventItem.Title</span>
                        }
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (eventItem != null)
                    {
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5><i class="fas fa-calendar-alt text-primary"></i> Event Information</h5>
                                <hr>
                                <div class="mb-2">
                                    <strong>Event:</strong> @eventItem.Title
                                </div>
                                <div class="mb-2">
                                    <strong>Date:</strong> @eventItem.StartAt.ToString("MMM dd, yyyy 'at' h:mm tt")
                                </div>
                                <div class="mb-2">
                                    <strong>Location:</strong> @eventItem.Venue
                                </div>
                                <div class="mb-2">
                                    <strong>Capacity:</strong> @eventItem.CurrentVolunteerCount / @eventItem.Capacity volunteers
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h5><i class="fas fa-chart-bar text-success"></i> Application Summary</h5>
                                <hr>
                                @{
                                    var pendingCount = Model.Count(a => a.Status == ApplicationStatus.Pending);
                                    var approvedCount = Model.Count(a => a.Status == ApplicationStatus.Approved);
                                    var rejectedCount = Model.Count(a => a.Status == ApplicationStatus.Rejected);
                                    var cancelledCount = Model.Count(a => a.Status == ApplicationStatus.Cancelled);
                                }
                                <div class="mb-2">
                                    <span class="badge bg-warning text-dark">@pendingCount Pending</span>
                                </div>
                                <div class="mb-2">
                                    <span class="badge bg-success">@approvedCount Approved</span>
                                </div>
                                <div class="mb-2">
                                    <span class="badge bg-danger">@rejectedCount Rejected</span>
                                </div>
                                <div class="mb-2">
                                    <span class="badge bg-secondary">@cancelledCount Cancelled</span>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Volunteer</th>
                                        <th>Email</th>
                                        <th>Applied Date</th>
                                        <th>Status</th>
                                        <th>Message</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var application in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@application.User?.FirstName @application.User?.LastName</strong>
                                            </td>
                                            <td>@application.User?.Email</td>
                                            <td>@application.AppliedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @{
                                                    string statusClass = application.Status switch
                                                    {
                                                        ApplicationStatus.Pending => "bg-warning text-dark",
                                                        ApplicationStatus.Approved => "bg-success",
                                                        ApplicationStatus.Rejected => "bg-danger",
                                                        ApplicationStatus.Cancelled => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@application.Status</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(application.Message))
                                                {
                                                    <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@application.Message">
                                                        @application.Message
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No message</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@application.Id" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                    
                                                    @if (application.Status == ApplicationStatus.Pending)
                                                    {
                                                        @if (!eventItem?.IsFull == true)
                                                        {
                                                            <form asp-action="Approve" method="post" style="display: inline;">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@application.Id" />
                                                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Are you sure you want to approve this application?')">
                                                                    <i class="fas fa-check"></i> Approve
                                                                </button>
                                                            </form>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-success btn-sm" disabled title="Event is full">
                                                                <i class="fas fa-check"></i> Approve
                                                            </button>
                                                        }
                                                        
                                                        <form asp-action="Reject" method="post" style="display: inline;">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@application.Id" />
                                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to reject this application?')">
                                                                <i class="fas fa-times"></i> Reject
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No actions</span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No applications found</h5>
                            <p class="text-muted">No volunteers have applied for this event yet.</p>
                        </div>
                    }

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Events" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Events
                        </a>
                        @if (eventItem != null)
                        {
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-outline-primary">
                                <i class="fas fa-eye"></i> View Event Details
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

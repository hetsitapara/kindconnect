@model IEnumerable<VolunteerManagementSystem.Models.VolunteerApplication>

@{
    ViewData["Title"] = "Manage All Applications";
    var stats = ViewBag.Stats as dynamic;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-users-cog"></i> Manage All Applications
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Statistics Cards -->
                    @if (stats != null)
                    {
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Total</h5>
                                        <h3>@stats.TotalApplications</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-dark">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Pending</h5>
                                        <h3>@stats.PendingApplications</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Approved</h5>
                                        <h3>@stats.ApprovedApplications</h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Rejected</h5>
                                        <h3>@stats.RejectedApplications</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Volunteer</th>
                                        <th>Event</th>
                                        <th>Event Date</th>
                                        <th>Applied Date</th>
                                        <th>Status</th>
                                        <th>Message</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var application in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@application.User?.FirstName @application.User?.LastName</strong><br>
                                                <small class="text-muted">@application.User?.Email</small>
                                            </td>
                                            <td>
                                                <strong>@application.Event?.Title</strong><br>
                                                <small class="text-muted">@application.Event?.NGO?.Name</small>
                                            </td>
                                            <td>
                                                @if (application.Event != null)
                                                {
                                                    @application.Event.StartAt.ToString("MMM dd, yyyy")
                                                }
                                            </td>
                                            <td>@application.AppliedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @{
                                                    string statusClass = application.Status switch
                                                    {
                                                        ApplicationStatus.Pending => "bg-warning text-dark",
                                                        ApplicationStatus.Approved => "bg-success",
                                                        ApplicationStatus.Rejected => "bg-danger",
                                                        ApplicationStatus.Cancelled => "bg-secondary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @statusClass">@application.Status</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(application.Message))
                                                {
                                                    <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@application.Message">
                                                        @application.Message
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No message</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@application.Id" class="btn btn-outline-primary btn-sm">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                    
                                                    @if (application.Status == ApplicationStatus.Pending)
                                                    {
                                                        @if (application.Event != null && !application.Event.IsFull)
                                                        {
                                                            <form asp-action="Approve" method="post" style="display: inline;">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@application.Id" />
                                                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Are you sure you want to approve this application?')">
                                                                    <i class="fas fa-check"></i> Approve
                                                                </button>
                                                            </form>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-success btn-sm" disabled title="Event is full">
                                                                <i class="fas fa-check"></i> Approve
                                                            </button>
                                                        }
                                                        
                                                        <form asp-action="Reject" method="post" style="display: inline;">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@application.Id" />
                                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to reject this application?')">
                                                                <i class="fas fa-times"></i> Reject
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No actions</span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No applications found</h5>
                            <p class="text-muted">No volunteers have applied for your events yet.</p>
                        </div>
                    }

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                        <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-calendar"></i> View All Events
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
